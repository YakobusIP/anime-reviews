generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Anime {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  mal_id Int @unique
  title String
  title_japanese String
  title_synonyms String[]
  type String
  status String
  airing Boolean
  aired_from DateTime?
  aired_to DateTime?
  duration String
  episodes Int?
  genres String[]
  images Json
  rating String
  score Float?
  season String?
  studios String[]
  themes String[]
  synopsis String
  trailer String?
  mal_url String
  personal_score Float?
  personal_review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

